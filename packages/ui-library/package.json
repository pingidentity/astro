{
  "name": "ui-library",
  "version": "0.1.0",
  "description": "A UI library made of reusable React components, util functions and static assets (e.g. CSS)",
  "author": "Ping Identity SaaS Interface Development",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://hg-od01.corp.pingidentity.com/r/ui-library"
  },
  "dependencies": {
    "react": "0.13.3",
    "react-tools": "0.13.3"
  },
  "devDependencies": {
    "babel": "5.8.23",
    "babel-core": "5.8.22",
    "babel-eslint": "4.1.1",
    "babel-jest": "5.3.0",
    "babel-loader": "5.3.2",
    "css-loader": "0.16.0",
    "eslint": "1.3.1",
    "eslint-loader": "1.0.0",
    "eslint-plugin-react": "3.3.1",
    "extract-text-webpack-plugin": "0.8.2",
    "file-loader": "0.8.4",
    "jest": "0.1.40",
    "jest-cli": "0.4.19",
    "style-loader": "0.12.3",
    "url-loader": "0.5.6",
    "webpack": "1.11.0",
    "webpack-babel-jest": "1.0.0",
    "webpack-dev-server": "1.10.1"
  },
  "engines": {
      "node": ">= 0.10.x",
      "npm": ">= 2.x.x"
  },
  "jest": {
    "rootDir": "./",
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-tools",
      "<rootDir>/node_modules/classnames",
      "<rootDir>/node_modules/underscore",
      "<rootDir>/src/core/TestUtils"
    ],
    "testDirectoryName": "tests",
    "testFileExtensions": [
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node/",
      "<rootDir>/node_modules/"
    ]
  },
  "scripts": {
    "build-do-not-use": "webpack -p --progress --colors --config webpack.config.js",

    "lint": "eslint --ext .js,.jsx .",
    "test": "jest",
    "start": "webpack-dev-server -d --hot --progress --colors --config webpack.dev.config.js",
    "verify": "npm run lint && npm run test",
  }
}
